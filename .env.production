# Sci-Bono LMS Production Environment Configuration
# DO NOT COMMIT ACTUAL SECRETS TO VERSION CONTROL

# Application Settings
APP_ENV=production
APP_DEBUG=false
APP_NAME="Sci-Bono Clubhouse LMS"
APP_URL=https://sci-bono-lms.com

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=database
DB_PORT=3306
DB_DATABASE=accounts
DB_USERNAME=scibono_user
DB_PASSWORD=CHANGE_THIS_IN_PRODUCTION
DB_ROOT_PASSWORD=CHANGE_THIS_ROOT_PASSWORD_IN_PRODUCTION

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_PORT=6379
REDIS_DB=0

# Security Configuration
APP_KEY=GENERATE_32_CHAR_RANDOM_STRING_FOR_PRODUCTION
JWT_SECRET=GENERATE_JWT_SECRET_FOR_PRODUCTION
ENCRYPTION_KEY=GENERATE_ENCRYPTION_KEY_FOR_PRODUCTION

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/sci-bono-lms.crt
SSL_KEY_PATH=/etc/ssl/private/sci-bono-lms.key
SSL_CHAIN_PATH=/etc/ssl/certs/sci-bono-lms-chain.crt

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=YOUR_EMAIL_HERE
MAIL_PASSWORD=YOUR_APP_PASSWORD_HERE
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@sci-bono-lms.com
MAIL_FROM_NAME="Sci-Bono Clubhouse LMS"

# Performance Settings
OPCACHE_ENABLE=1
OPCACHE_VALIDATE_TIMESTAMPS=0
OPCACHE_REVALIDATE_FREQ=0
OPCACHE_MEMORY_CONSUMPTION=256
OPCACHE_MAX_ACCELERATED_FILES=20000

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=1440
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=sci-bono-lms.com

# Cache Configuration
CACHE_DRIVER=redis
CACHE_PREFIX=scibono_lms

# File Storage
FILESYSTEM_DRIVER=local
UPLOAD_MAX_SIZE=50M
STORAGE_PATH=/var/www/html/storage

# API Configuration
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=60
API_TOKEN_EXPIRES_IN=3600

# Monitoring & Logging
LOG_CHANNEL=stack
LOG_LEVEL=warning
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_LOG_THRESHOLD=1000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/var/backups/sci-bono-lms

# External Services
GOOGLE_ANALYTICS_ID=CHANGE_THIS_IF_USING_GA
RECAPTCHA_SITE_KEY=CHANGE_THIS_IF_USING_RECAPTCHA
RECAPTCHA_SECRET_KEY=CHANGE_THIS_IF_USING_RECAPTCHA

# Development/Testing Settings (should be disabled in production)
ENABLE_DEV_PASSWORDS=false
ENABLE_DEBUG_MODE=false
SHOW_ERROR_DETAILS=false